@model HMS.Models.DashboardCountModel
@{
    ViewData["Title"] = "Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .dashboard-card {
        min-height: 180px; /* ensures all cards are same height */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: transform 0.2s;
    }

    .dashboard-card i {
        font-size: 2.5rem;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }
</style>

<div class="container py-4">
    <div class="row g-4 justify-content-center">
        <!-- Row 1: Users, Doctors, Departments -->
        <div class="col-12 col-md-4 col-lg-4">
            <a asp-controller="User" asp-action="UserList" class="text-decoration-none">
                <div class="card shadow rounded-4 border-0 text-center p-3 dashboard-card">
                    <i class="bi bi-people text-primary"></i>
                    <h5 class="mt-2">Users</h5>
                    <h3 class="fw-bold">@Model.TotalUsers</h3>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-4 col-lg-4">
            <a asp-controller="Doctor" asp-action="DoctorList" class="text-decoration-none">
                <div class="card shadow rounded-4 border-0 text-center p-3 dashboard-card">
                    <i class="bi bi-person-badge text-success"></i>
                    <h5 class="mt-2">Doctors</h5>
                    <h3 class="fw-bold">@Model.TotalDoctors</h3>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-4 col-lg-4">
            <a asp-controller="Department" asp-action="DepartmentList" class="text-decoration-none">
                <div class="card shadow rounded-4 border-0 text-center p-3 dashboard-card">
                    <i class="bi bi-building text-warning"></i>
                    <h5 class="mt-2">Departments</h5>
                    <h3 class="fw-bold">@Model.TotalDepartments</h3>
                </div>
            </a>
        </div>

        <!-- Row 2: Doctor-Department, Appointments, Patients -->
        <div class="col-12 col-md-4 col-lg-4">
            <a asp-controller="DoctorDepartment" asp-action="DoctorDepartmentList" class="text-decoration-none">
                <div class="card shadow rounded-4 border-0 text-center p-3 dashboard-card">
                    <i class="bi bi-person-lines-fill text-danger"></i>
                    <h5 class="mt-2">Doc-Dept</h5>
                    <h3 class="fw-bold">@Model.TotalDoctorDepartments</h3>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-4 col-lg-4">
            <a asp-controller="Appointment" asp-action="AppointmentList" class="text-decoration-none">
                <div class="card shadow rounded-4 border-0 text-center p-3 dashboard-card">
                    <i class="bi bi-calendar-check text-info"></i>
                    <h5 class="mt-2">Appointments</h5>
                    <h3 class="fw-bold">@Model.TotalAppointments</h3>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-4 col-lg-4">
            <a asp-controller="Patient" asp-action="PatientList" class="text-decoration-none">
                <div class="card shadow rounded-4 border-0 text-center p-3 dashboard-card">
                    <i class="bi bi-heart-pulse text-secondary"></i>
                    <h5 class="mt-2">Patients</h5>
                    <h3 class="fw-bold">@Model.TotalPatients</h3>
                </div>
            </a>
        </div>

        <!-- Row 3: Revenue -->
        <div class="col-12 col-md-4 col-lg-4">
            <div class="card shadow rounded-4 border-0 text-center p-3 dashboard-card">
                <i class="bi bi-currency-dollar text-success"></i>
                <h5 class="mt-2">Revenue</h5>
                <h3 class="fw-bold">@Model.TotalRevenue.ToString("C")</h3>
            </div>
        </div>
    </div>
</div>
