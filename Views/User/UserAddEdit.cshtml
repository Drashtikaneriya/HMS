@{
    ViewData["Title"] = "Insert User";
}

<!-- Light Theme + Bold Labels -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4" style="background-color: #fefefe;">
                <div class="card-header text-center rounded-top-4" style="background-color: #eaf6ff;">
                    <h4 class="mb-0 text-primary">Insert New User</h4>
                </div>
                <div class="card-body px-4 py-3" style="background-color: #fcfcfc;">
                    <form method="post"  asp-controller="User" asp-action="Index">
                        <div class="mb-3">
                            <label for="UserName" class="form-label fw-bold text-dark">User Name</label>
                            <input type="text" class="form-control border-light rounded-3" id="UserName" name="UserName" placeholder="Enter full name" style="background-color: #f5faff;" required>
                        </div>

                        <div class="mb-3">
                            <label for="Password" class="form-label fw-bold text-dark">Password</label>
                            <input type="password" class="form-control border-light rounded-3" id="Password" name="Password" placeholder="Enter password" style="background-color: #f5faff;" required>
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label fw-bold text-dark">Email Address</label>
                            <input type="email" class="form-control border-light rounded-3" id="Email" name="Email" placeholder="Enter email" style="background-color: #f5faff;" required>
                        </div>

                        <div class="mb-3">
                            <label for="MobileNo" class="form-label fw-bold text-dark">Mobile Number</label>
                            <input type="tel" class="form-control border-light rounded-3" id="MobileNo" name="MobileNo" placeholder="Enter 10-digit number" pattern="[0-9]{10}" style="background-color: #f5faff;" required>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" checked>
                            <label class="form-check-label fw-bold text-dark" for="IsActive">Is Active</label>
                        </div>

                      <input type="hidden" name="Modified" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />

                        <div class="text-end">
                            <button type="submit" class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-semibold">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center small text-muted rounded-bottom-4" style="background-color: #eaf6ff;">
                    © HMS System • 2025
                </div>
            </div>
        </div>
    </div>
</div>
