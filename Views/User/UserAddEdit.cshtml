@model HMS.Models.UserAddEditModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<!-- Light Theme + Bold Labels -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4" style="background-color: #fefefe;">
                <div class="card-header text-center rounded-top-4" style="background-color: #eaf6ff;">
                    <h4 class="mb-0 text-primary">Insert New User</h4>
                </div>
                <div class="card-body px-4 py-3" style="background-color: #fcfcfc;">
                    <form method="post" asp-controller="User" asp-action="UserAddEdit">
                        <div class="mb-3">
                            <label for="UserName" class="form-label fw-bold text-dark">User Name</label>
                            <input asp-for="UserName" type="text" class="form-control border-light rounded-3" id="UserName" name="UserName" placeholder="Enter full name" style="background-color: #f5faff;" required>
                        </div>

                        <div class="mb-3 position-relative">
                            <label for="Password" class="form-label fw-bold text-dark">Password</label>
                            <input asp-for="Password" type="password" class="form-control border-light rounded-3 pe-5" id="Password" name="Password" placeholder="Enter password" style="background-color: #f5faff;" required>

                            <!-- Eye Icon -->
                            <i class="fa-solid fa-eye position-absolute" id="togglePassword"
                               style="top: 70%; right: 15px; cursor: pointer; transform: translateY(-50%); color: #6c757d;"></i>
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label fw-bold text-dark">Email Address</label>
                            <input asp-for="Email" type="email" class="form-control border-light rounded-3" id="Email" name="Email" placeholder="Enter email" style="background-color: #f5faff;" required>
                        </div>

                        <div class="mb-3">
                            <label for="MobileNo" class="form-label fw-bold text-dark">Mobile Number</label>
                            <input asp-for="MobileNo" type="tel" class="form-control border-light rounded-3" id="MobileNo" name="MobileNo" placeholder="Enter 10-digit number" style="background-color: #f5faff;" required>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" name="IsActive" >
                            <label class="form-check-label fw-bold text-dark" for="IsActive">Is Active</label>
                        </div>

                        <input asp-for="Modified" type="hidden" name="Modified" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />

                        <input asp-for="UserID" type="hidden"/>
                        <div class="text-end">
                            <button type="submit" class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-semibold">Submit</button>
                        </div>
                    </form>
                    @section Scripts {
                    @{
                            await Html.RenderPartialAsync("_ValidationScriptsPartial");
                        }
                    }
                </div>
                <div class="card-footer text-center small text-muted rounded-bottom-4" style="background-color: #eaf6ff;">
                    © HMS System • 2025
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("Password");

    togglePassword.addEventListener("click", function () {
        const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
        passwordInput.setAttribute("type", type);
        this.classList.toggle("fa-eye");
        this.classList.toggle("fa-eye-slash");
    });
</script>
