@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

@model UserLoginModel

<main style="background: linear-gradient(135deg, #dceefb, #f8fafc); min-height: 100vh;">
    <div class="container">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mt-3 rounded-pill shadow-sm fw-semibold text-center" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
        <section class="section register d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-7 d-flex flex-column align-items-center justify-content-center">

                        <!-- HMS Branding -->
                        <div class="text-center mb-4">
                            <img src="https://cdn-icons-png.flaticon.com/512/3774/3774299.png"
                                 alt="HMS Logo"
                                 style="height:90px; filter: drop-shadow(3px 3px 8px rgba(0,0,0,0.2));">
                        </div>
                        <!-- End Branding -->

                        <div class="card border-0 rounded-4 shadow-lg mb-3"
                             style="background: linear-gradient(145deg, #ffffff, #f4f7fb);">
                            <div class="card-body p-4">

                                <div class="pt-2 pb-3 text-center">
                                    <h5 class="card-title fw-bold text-dark fs-4">
                                        Login to <span style="color:#5a67d8;">HMS</span>
                                    </h5>
                                    <p class="text-muted small">Enter your credentials to continue</p>
                                </div>

                                <form class="row g-3 needs-validation" asp-action="UserLogin" asp-controller="User">

                                    <!-- Username -->
                                    <div class="col-12">
                                        <label asp-for="Username" class="form-label">Username</label>
                                        <div class="input-group has-validation">
                                            <span class="input-group-text border-0 rounded-start-pill"
                                                  style="background:#e0f2fe; color:#1e40af;">
                                                <i class="bi bi-person"></i>
                                            </span>
                                            <input type="text" asp-for="Username" class="form-control border-0 rounded-end-pill shadow-sm"
                                                   id="yourUsername" placeholder="Enter username"
                                                   style="background:#f8fafc;">
                                        </div>
                                        <span asp-validation-for="Username" class="text-danger small"></span>
                                    </div>

                                    <!-- Password -->
                                    <div class="col-12">
                                        <label asp-for="Password" class="form-label">Password</label>
                                        <div class="input-group">
                                            <span class="input-group-text border-0 rounded-start-pill"
                                                  style="background:#ede9fe; color:#4c1d95;">
                                                <i class="bi bi-lock"></i>
                                            </span>
                                            <input type="password" asp-for="Password"
                                                   class="form-control border-0 rounded-end-pill shadow-sm"
                                                   id="yourPassword" placeholder="Enter password"
                                                   style="background:#f9fafb;">
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger small"></span>
                                    </div>

                                    <!-- Remember Me -->
                                    <div class="col-12">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe">
                                            <label class="form-check-label" for="rememberMe">Remember me</label>
                                        </div>
                                    </div>

                                    <!-- Login Button -->
                                    <div class="col-12">
                                        <button class="btn w-100 rounded-pill fw-bold shadow"
                                                type="submit"
                                                style="background:#c7d2fe; color:#1e3a8a; transition:0.3s;">
                                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                                        </button>
                                    </div>

                                    <!-- Create Account -->
                                    <div class="col-12 text-center">
                                        <p class="small mb-0 mt-2 text-dark">
                                            Don't have an account?
                                            <a asp-controller="User" asp-action="UserAddEdit"
                                               class="fw-bold" style="color:#5a67d8;">Create one</a>
                                        </p>
                                    </div>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>
</main>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Button hover animation
        $("button[type='submit']").hover(
            function () { $(this).css("background", "#5a67d8").css("color", "#fff"); },
            function () { $(this).css("background", "#c7d2fe").css("color", "#1e3a8a"); }
        );
    </script>
}

