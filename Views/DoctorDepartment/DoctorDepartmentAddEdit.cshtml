@model HMS.Models.DoctorDepartmentModelAddEdit

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4" style="background-color: #fefefe;">
                <div class="card-header text-center rounded-top-4" style="background-color: #eaf6ff;">
                    <h4 class="mb-0 text-primary">Assign Doctor to Department</h4>
                </div>
                <div class="card-body px-4 py-3" style="background-color: #fcfcfc;">
                    <form method="post" asp-controller="DoctorDepartment" asp-action="DoctorDepartmentAddEdit">

                        <input asp-for="DoctorDepartmentID" type="hidden" />

                        <div class="mb-3">
                            <label for="DoctorID" class="form-label fw-bold text-dark">Doctor ID</label>
                            <input  asp-for="DoctorID" type="number" class="form-control border-light rounded-3" id="DoctorID" name="DoctorID" placeholder="Enter Doctor ID" style="background-color: #f5faff;" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DepartmentID" class="form-label fw-bold text-dark">Department ID</label>
                            <input asp-for="DepartmentID" type="number" class="form-control border-light rounded-3" id="DepartmentID" name="DepartmentID" placeholder="Enter Department ID" style="background-color: #f5faff;" required />
                        </div>
                 
                        <input type="hidden" />
                        <input asp-for="Modified" type="hidden" />


                        <div class="col-md-6 mb-3">
                            <label for="UserID" class="form-label fw-bold text-dark">User ID</label>
                            <input asp-for="UserID" type="number" class="form-control border-light rounded-3" id="UserID" name="UserID" placeholder="Enter linked user ID" style="background-color: #f5faff;" required>
                        </div>

                        <!-- ✅ Buttons Section -->
                        <div class="d-flex justify-content-between">
                            <a href="/DoctorDepartment/DoctorDepartmentList" class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-semibold">⬅ Back to DoctorDepartment List</a>
                            <button type="submit" class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-semibold">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center small text-muted rounded-bottom-4" style="background-color: #eaf6ff;">
                    © HMS System • 2025
                </div>
            </div>
        </div>
    </div>
</div>
