
@model HMS.Models.DepartmentAddEditModel
@{
    ViewData["Title"] = "Insert Department";
}
<div class="card shadow-sm border-0">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4" style="background-color: #fefefe;">
                <div class="card-header text-center rounded-top-4" style="background-color: #eaf6ff;">
                    <h4 class="mb-0 text-primary">Insert New Department</h4>
                </div>
                   
                  
                <div class="card-body px-4 py-3" style="background-color: #fcfcfc;">
                    <form method="post" asp-controller="Department" asp-action="DepartmentAddEdit">
                            <input asp-for="DepartmentID" type="hidden" />

                        <div class="mb-3">
                            <label for="DepartmentName" class="form-label fw-bold text-dark">Department Name</label>
                            <input asp-for="DepartmentName" type="text" class="form-control border-light rounded-3" id="DepartmentName" name="DepartmentName" placeholder="Enter department name" style="background-color: #f5faff;" required>
                        </div>

                        <div class="mb-3">
                            <label for="Description" class="form-label fw-bold text-dark">Description</label>
                            <textarea asp-for="Description" class="form-control border-light rounded-3" id="Description" name="Description" rows="3" placeholder="Optional department description" style="background-color: #f5faff;"></textarea>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="UserID" class="form-label fw-bold text-dark">User ID</label>
                            <input asp-for="UserID" type="number" class="form-control border-light rounded-3" id="UserID" name="UserID" placeholder="Enter linked user ID" style="background-color: #f5faff;" required>
                        </div>
                        <input asp-for="Modified" type="hidden" name="Modified" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                        

                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" name="IsActive">
                            <label class="form-check-label fw-bold text-dark" for="IsActive">Is Active</label>
                        </div>

                      

                        <div class="text-end">
                            <button type="submit" class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-semibold">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center small text-muted rounded-bottom-4" style="background-color: #eaf6ff;">
                    © HMS System • 2025
                </div>
            </div>
        </div>
    </div>
</div>
