
@model DataTable
@using System.Data

@{
    ViewData["Title"] = "Patient List";

    
   
}
@{
    // Counters
    int maleCount = Model.AsEnumerable().Count(r => r["Gender"].ToString() == "Male");
    int femaleCount = Model.AsEnumerable().Count(r => r["Gender"].ToString() == "Female");

    int ageAbove18 = Model.AsEnumerable().Count(r =>
        (DateTime.Now.Year - Convert.ToDateTime(r["DateOfBirth"]).Year) >= 18
    );
    int ageBelow18 = Model.AsEnumerable().Count(r =>
        (DateTime.Now.Year - Convert.ToDateTime(r["DateOfBirth"]).Year) < 18
    );
}

<h1 class="mb-4">Patient List</h1>
<form method="get" asp-action="DepartmentList" class="d-flex mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search by Department Name" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
</form>


<div class="d-flex gap-3 mb-4 flex-wrap">

    <!-- Male -->
    <div class="position-relative">
        <button class="btn btn-lg shadow-sm rounded-4"
                style="background:#e6f0ff; color:#0d6efd; border:1px solid #cce0ff; min-width:150px;">
            <i class="bi bi-gender-male fs-4"></i> Male
        </button>
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary">
            @maleCount
        </span>
    </div>

    <!-- Female -->
    <div class="position-relative">
        <button class="btn btn-lg shadow-sm rounded-4"
                style="background:#fff0f6; color:#d63384; border:1px solid #f5c6d0; min-width:150px;">
            <i class="bi bi-gender-female fs-4"></i> Female
        </button>
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            @femaleCount
        </span>
    </div>

    <!-- Adult (18+) -->
    <div class="position-relative">
        <button class="btn btn-lg shadow-sm rounded-4"
                style="background:#e6ffed; color:#198754; border:1px solid #b3f0c6; min-width:150px;">
            <i class="bi bi-person-check fs-4"></i> Adult
        </button>
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success">
            @ageAbove18
        </span>
    </div>

    <!-- Child (<18) -->
    <div class="position-relative">
        <button class="btn btn-lg shadow-sm rounded-4"
                style="background:#fff8e6; color:#cc9a06; border:1px solid #ffe5b3; min-width:150px;">
            <i class="bi bi-person fs-4"></i> Child
        </button>
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark">
            @ageBelow18
        </span>
    </div>

</div>


<!-- ✅ Table and existing buttons -->
<div>
    
    <div class="d-flex justify-content-between mb-3">
        <div>
            <a class="btn btn-success me-2" href="/user/ExportToCSV">⬇️ Download CSV</a>
            <a class="btn btn-success me-2" href="/user/ExportToExcel">📂 Download Excel</a>
            <a class="btn btn-primary" href="/Patient/PatientAddEdit">➕ Add Patient</a>
        </div>
        <div>
            <a class="btn btn-secondary me-2" asp-controller="Dashboard" asp-action="Index">🏠 Go to Dashboard</a>
            <button type="button" class="btn btn-danger" onclick="confirmDeleteSelected()">🗑 Delete Selected Users</button>
        </div>
    </div>
</div>

<!-- Error Message -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- Patient Table -->
<!-- Scrollable Table Container -->

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-primary">

        <tr>
            <th>PatientID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Address</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (DataRow dr in Model.Rows)
        {
            <tr>
                <td>@dr["PatientID"]</td>
                    <td>@dr["Name"]</td>
                    <td>@dr["Phone"]</td>
                    <td>@dr["Email"]</td>
                    <td>@dr["Address"]</td>
                    <td>@Convert.ToDateTime(dr["DateOfBirth"]).ToString("dd-MM-yyyy")</td>
                    <td>@dr["Gender"]</td>
                    <td>
                        <div class="d-flex justify-content-center gap-1">
                            <a asp-controller="Patient" asp-action="PatientForm" asp-route-ID="@dr["PatientID"]"
                               class="btn btn-primary btn-sm" style="min-width: 60px; height: 32px;">
                                Edit
                            </a>
                            <button type="button"
                                    class="btn btn-danger btn-sm"
                                    style="min-width: 60px; height: 32px;"
                                    onclick="confirmDelete('@dr["PatientID"]', '@dr["Name"]')">
                                Delete
                            </button>
                        </div>
                    </td>
                </tr>
                }
        </tbody>
    </table>
</div>


<!-- SweetAlert Delete Script -->
<script>
    function confirmDelete(patientId, patientName) {
        Swal.fire({
            title: 'Are you sure?',
            text: `Do you really want to delete patient "${patientName}"?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/Patient/PatientDelete?PatientID=${patientId}`;
            }
        });
    }
</script>
