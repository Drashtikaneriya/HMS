@model DataTable
@using System.Data

@{
    ViewData["Title"] = "Patient List";
}

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<h1 class="mb-4">Patient List</h1>

<!-- Search Form -->
<div>
    <form method="get" asp-action="DepartmentList" class="d-flex">
        <div class="input-group">
            <input type="text" name="searchTerm" class="form-control" placeholder="Search by Department Name" />
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </form>
    <br />
</div>


<!-- ✅ Buttons -->
<div class="d-flex justify-content-between mb-3">
    <div>
        <a class="btn btn-success me-2" href="/user/ExportToCSV">⬇️ Download CSV</a>
        <a class="btn btn-success me-2" href="/user/ExportToExcel">📂 Download Excel</a>
        <a class="btn btn-primary" href="/Patient/PatientAddEdit">➕ Add Patient</a> <!-- ✅ Add User button -->
    </div>
    <div>
        <a class="btn btn-secondary me-2" asp-controller="Dashboard" asp-action="Index">🏠 Go to Dashboard</a>
            <button type="button" class="btn btn-danger" onclick="confirmDeleteSelected()">🗑 Delete Selected Users</button>
    </div>
</div>

<!-- Error Message -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- Patient Table -->
<!-- Scrollable Table Container -->

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-primary">

        <tr>
            <th>PatientID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Address</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (DataRow dr in Model.Rows)
        {
            <tr>
                <td>@dr["PatientID"]</td>
                    <td>@dr["Name"]</td>
                    <td>@dr["Phone"]</td>
                    <td>@dr["Email"]</td>
                    <td>@dr["Address"]</td>
                    <td>@Convert.ToDateTime(dr["DateOfBirth"]).ToString("dd-MM-yyyy")</td>
                    <td>@dr["Gender"]</td>
                    <td>
                        <div class="d-flex justify-content-center gap-1">
                            <a asp-controller="Patient" asp-action="PatientForm" asp-route-ID="@dr["PatientID"]"
                               class="btn btn-primary btn-sm" style="min-width: 60px; height: 32px;">
                                Edit
                            </a>
                            <button type="button"
                                    class="btn btn-danger btn-sm"
                                    style="min-width: 60px; height: 32px;"
                                    onclick="confirmDelete('@dr["PatientID"]', '@dr["Name"]')">
                                Delete
                            </button>
                        </div>
                    </td>
                </tr>
                }
        </tbody>
    </table>
</div>


<!-- SweetAlert Delete Script -->
<script>
    function confirmDelete(patientId, patientName) {
        Swal.fire({
            title: 'Are you sure?',
            text: `Do you really want to delete patient "${patientName}"?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/Patient/PatientDelete?PatientID=${patientId}`;
            }
        });
    }
</script>
