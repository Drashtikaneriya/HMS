@{
    ViewData["Title"] = "Insert Patient";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-4" style="background-color: #fefefe;">
                <div class="card-header text-center rounded-top-4" style="background-color: #eaf6ff;">
                    <h4 class="mb-0 text-primary">Insert New Patient</h4>
                </div>
                <div class="card-body px-4 py-3" style="background-color: #fcfcfc;">
                    <form method="post" asp-controller="Patient" asp-action="Index">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Name" class="form-label fw-bold text-dark">Full Name</label>
                                <input type="text" class="form-control border-light rounded-3" id="Name" name="Name" placeholder="Enter patient name" style="background-color: #f5faff;" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="DateOfBirth" class="form-label fw-bold text-dark">DOB</label>
                                <input type="date" class="form-control border-light rounded-3" id="DateOfBirth" name="DateOfBirth" style="background-color: #f5faff;" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="Gender" class="form-label fw-bold text-dark">Gender</label>
                                <select class="form-select border-light rounded-3" id="Gender" name="Gender" style="background-color: #f5faff;" required>
                                    <option value="" disabled selected>Select gender</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="Phone" class="form-label fw-bold text-dark">Phone</label>
                                <input type="tel" class="form-control border-light rounded-3" id="Phone" name="Phone" placeholder="Enter phone number" style="background-color: #f5faff;" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="Email" class="form-label fw-bold text-dark">Email Address</label>
                                <input type="email" class="form-control border-light rounded-3" id="Email" name="Email" placeholder="Enter email" style="background-color: #f5faff;" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="Address" class="form-label fw-bold text-dark">Address</label>
                                <input type="text" class="form-control border-light rounded-3" id="Address" name="Address" placeholder="Enter address" style="background-color: #f5faff;" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="City" class="form-label fw-bold text-dark">City</label>
                                <input type="text" class="form-control border-light rounded-3" id="City" name="City" placeholder="Enter city" style="background-color: #f5faff;" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="State" class="form-label fw-bold text-dark">State</label>
                                <input type="text" class="form-control border-light rounded-3" id="State" name="State" placeholder="Enter state" style="background-color: #f5faff;" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="UserID" class="form-label fw-bold text-dark">User ID</label>
                                <input type="number" class="form-control border-light rounded-3" id="UserID" name="UserID" placeholder="Enter linked user ID" style="background-color: #f5faff;" required>
                            </div>
                            <input type="hidden" name="Modified" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold text-dark">Is Active</label><br />
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="IsActive" name="IsActive" checked>
                                    <label class="form-check-label text-dark" for="IsActive">Yes</label>
                                </div>
                            </div>

                        </div>

                        <div class="text-end mt-3">
                            <button type="submit" class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-semibold">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center small text-muted rounded-bottom-4" style="background-color: #eaf6ff;">
                    © HMS System • 2025
                </div>
            </div>
        </div>
    </div>
</div>
