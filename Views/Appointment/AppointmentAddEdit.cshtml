@model HMS.Models.AppointmentAddEditModel

@{
    ViewData["Title"] = "Insert Appointment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-4" style="background-color: #fefefe;">
                <div class="card-header text-center rounded-top-4" style="background-color: #eaf6ff;">
                    <h4 class="mb-0 text-primary">Insert New Appointment</h4>
                </div>
                <div class="card-body px-4 py-3" style="background-color: #fcfcfc;">
                    <form method="post" asp-controller="Appointment" asp-action="AppointmentAddEdit">
                        <input asp-for="AppointmentID" type="hidden" />
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label asp-for="DoctorID" class="form-label fw-bold text-dark"></label>
                                <input asp-for="DoctorID" class="form-control border-light rounded-3" placeholder="Enter Doctor ID" style="background-color: #f5faff;" />
                                <span asp-validation-for="DoctorID" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="PatientID" class="form-label fw-bold text-dark"></label>
                                <input asp-for="PatientID" class="form-control border-light rounded-3" placeholder="Enter Patient ID" style="background-color: #f5faff;" />
                                <span asp-validation-for="PatientID" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="UserID" class="form-label fw-bold text-dark"></label>
                                <input asp-for="UserID" class="form-control border-light rounded-3" placeholder="Enter User ID" style="background-color: #f5faff;" />
                                <span asp-validation-for="UserID" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AppointmentDate" class="form-label fw-bold text-dark"></label>
                                <input asp-for="AppointmentDate" type="datetime-local" class="form-control border-light rounded-3" style="background-color: #f5faff;" />
                                <span asp-validation-for="AppointmentDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AppointmentStatus" class="form-label fw-bold text-dark"></label>
                                <select asp-for="AppointmentStatus" class="form-select border-light rounded-3" style="background-color: #f5faff;">
                                    <option value="">-- Select Status --</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Confirmed">Confirmed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                                <span asp-validation-for="AppointmentStatus" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="TotalConsultedAmount" class="form-label fw-bold text-dark"></label>
                                <input asp-for="TotalConsultedAmount" class="form-control border-light rounded-3" placeholder="e.g. 250.00" style="background-color: #f5faff;" />
                                <span asp-validation-for="TotalConsultedAmount" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-bold text-dark"></label>
                                <textarea asp-for="Description" class="form-control border-light rounded-3" rows="2" placeholder="Short description..." style="background-color: #f5faff;"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="SpecialRemarks" class="form-label fw-bold text-dark"></label>
                                <textarea asp-for="SpecialRemarks" class="form-control border-light rounded-3" rows="2" placeholder="Any additional notes..." style="background-color: #f5faff;"></textarea>
                                <span asp-validation-for="SpecialRemarks" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Hidden fields -->
                        <input asp-for="Created" type="hidden" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                        <input asp-for="Modified" type="hidden" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />

                        <div class="text-end">
                            <button type="submit" class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-semibold">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center small text-muted rounded-bottom-4" style="background-color: #eaf6ff;">
                    © HMS System • 2025
                </div>
            </div>
        </div>
    </div>
</div>
