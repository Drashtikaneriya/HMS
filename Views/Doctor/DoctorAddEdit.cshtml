@model HMS.Models.DoctorAddEditModel


<!-- Light Theme + Bold Labels for Doctor Form -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4" style="background-color: #fefefe;">
                <div class="card-header text-center rounded-top-4" style="background-color: #eaf6ff;">
                    <h4 class="mb-0 text-primary">Insert New Doctor</h4>
                </div>
                <div class="card-body px-4 py-3" style="background-color: #fcfcfc;">

                    <form method="post" asp-controller="Doctor" asp-action="DoctorAddEdit">
                        <input asp-for="DoctorID" type="hidden" />
                       
                        <div class="mb-3">
                            <label for="Name" class="form-label fw-bold text-dark">Doctor Name</label>
                            <input asp-for="Name" type="text" class="form-control border-light rounded-3" id="Name" name="Name" placeholder="Enter doctor name" style="background-color: #f5faff;" required>
                        </div>

                        <div class="mb-3">
                            <label for="Phone" class="form-label fw-bold text-dark">Phone</label>
                            <input  asp-for="Phone" type="tel" class="form-control border-light rounded-3" id="Phone" name="Phone" placeholder="Enter phone number" style="background-color: #f5faff;" required>
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label fw-bold text-dark">Email Address</label>
                            <input asp-for="Email" type="email" class="form-control border-light rounded-3" id="Email" name="Email" placeholder="Enter email" style="background-color: #f5faff;" required>
                        </div>

                        <div class="mb-3">
                            <label for="Qualification" class="form-label fw-bold text-dark">Qualification</label>
                            <input asp-for="Qualification" type="text" class="form-control border-light rounded-3" id="Qualification" name="Qualification" placeholder="Enter qualification" style="background-color: #f5faff;" required>
                        </div>

                        <div class="mb-3">
                            <label for="Specialization" class="form-label fw-bold text-dark">Specialization</label>
                            <input asp-for="Specialization" type="text" class="form-control border-light rounded-3" id="Specialization" name="Specialization" placeholder="Enter specialization" style="background-color: #f5faff;" required>
                        </div>

                        <input type="hidden" name="Modified" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />

                        <div class="mb-3">
                            <label for="UserID" class="form-label fw-bold text-dark">User ID</label>
                            <input  asp-for="UserID " type="number" class="form-control border-light rounded-3" id="UserID" name="UserID" placeholder="Enter user ID" style="background-color: #f5faff;" required>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input  asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" name="IsActive" >
                            <label class="form-check-label fw-bold text-dark" for="IsActive">Is Active</label>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="/doctor/doctor-list" class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-semibold">⬅ Back to Doctor List</a>
                            <button type="submit" class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-semibold">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center small text-muted rounded-bottom-4" style="background-color: #eaf6ff;">
                    © HMS System • 2025
                </div>
            </div>
        </div>
    </div>
</div>
